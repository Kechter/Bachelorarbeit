{
  "compilerOptions": {
    "target": "ES6",                                
    "module": "CommonJS",                           
    "rootDir": "./src",                             
    "outDir": "./dist",                             
    "moduleResolution": "node",                     
    "resolveJsonModule": true,                      
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                 
    "skipLibCheck": true                            
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
